{
  "name": "@masatomakino/pixijs-basic-button",
  "version": "0.9.4",
  "description": "Interactive button library for pixi.js",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      },
      "default": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      }
    }
  },
  "types": "./esm/index.d.ts",
  "files": [
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/pixijs-basic-button.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.10.0",
    "@vitest/browser-webdriverio": "^4.0.0",
    "@vitest/coverage-istanbul": "^4.0.0",
    "browser-sync": "^3.0.2",
    "pixi.js": "^8.2.5",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typedoc": "^0.28.1",
    "typescript": "^5.4.1",
    "webdriverio": "^9.0.1"
  },
  "peerDependencies": {
    "pixi.js": "^8.0.4"
  },
  "scripts": {
    "test": "vitest --run",
    "coverage": "vitest --coverage --run",
    "pre-commit": "prettier --write --ignore-unknown",
    "pre-push": "xvfb-run --auto-servernum vitest --run",
    "test:ci": "xvfb-run --auto-servernum vitest --run",
    "coverage:ci": "xvfb-run --auto-servernum vitest --coverage --run",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo && npm run typedocs",
    "demo": "npx @masatomakino/gulptask-demo-page  --compileModule es2020",
    "buildTS": "tsc",
    "typedocs": "typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w --port 3000 --no-open",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/pixijs-basic-button/issues"
  },
  "homepage": "https://github.com/MasatoMakino/pixijs-basic-button#readme",
  "directories": {
    "doc": "docs",
    "lib": "esm"
  }
}
