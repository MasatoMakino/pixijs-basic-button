{
  "name": "@masatomakino/pixijs-basic-button",
  "version": "0.2.2",
  "description": "Interactive button library for pixi.js",
  "types": "./esm/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/pixijs-basic-button.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "canvas": "^2.10.2",
    "@masatomakino/gulptask-demo-page": "^0.5.2",
    "@masatomakino/gulptask-dev-server": "^0.4.2",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "pixi.js": "^7.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "pixi.js": ">=7.0.0 <8.0.0"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo && npm run typedocs",
    "demo": "npx @masatomakino/gulptask-demo-page",
    "buildTS": "npx tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "npx tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/pixijs-basic-button/issues"
  },
  "homepage": "https://github.com/MasatoMakino/pixijs-basic-button#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
